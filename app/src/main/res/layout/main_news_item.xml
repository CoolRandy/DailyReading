<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <com.example.randy.dailyreading.view.RippleView
        android:id="@+id/itemRippleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/item_background_selector_light"
        android:orientation="horizontal"
        ripple:alphaFactor="0.7"
        ripple:rippleColor="#58FAAC"
        ripple:hover="true">

        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="今日热闻"
            android:textColor="@color/dark_news_topic"
            android:textSize="13sp"
            android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_title"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/iv_title"
                    android:padding="5dp"
                    android:text="如何看待当下这种越来越普遍的“沉默”人格？"
                    android:textSize="18sp" />
            </RelativeLayout>

    </com.example.randy.dailyreading.view.RippleView>

</LinearLayout>